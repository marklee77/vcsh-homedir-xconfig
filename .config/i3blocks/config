[external ip]
command=${XDG_CONFIG_HOME}/i3blocks/blocklets/externalip
color=#00FF00
interval=600

[wifi]
command=${XDG_CONFIG_HOME}/i3blocks/blocklets/wifi wlan0
interval=5

[bluetooth]
command=${XDG_CONFIG_HOME}/i3blocks/blocklets/bluetooth bnep0
interval=5

[ethernet]
command=${XDG_CONFIG_HOME}/i3blocks/blocklets/ethernet eth0
color=#00FF00
interval=5

[battery]
command=${XDG_CONFIG_HOME}/i3blocks/blocklets/battery BAT0
align=right
interval=5

[volume]
command=${XDG_CONFIG_HOME}/i3blocks/blocklets/volume 1 Master
align=right
min_width= 100%
interval=once
signal=1

[brightness]
command=${XDG_CONFIG_HOME}/i3blocks/blocklets/brightness
align=right
min_width= 100%
interval=once
signal=2

[time]
command=date '+%Y-%m-%d %H:%M'
align=right
min_width=0000-00-00 00:00
interval=30

[lid]
command=${XDG_CONFIG_HOME}/i3blocks/blocklets/lid
interval=5

[mrsync]
command=${XDG_CONFIG_HOME}/i3blocks/blocklets/mrsync
interval=600
