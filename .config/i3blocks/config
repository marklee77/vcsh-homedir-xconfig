[wifi]
command=${XDG_CONFIG_HOME}/i3blocks/blocklets/wifi wlan0
interval=5

[ethernet]
command=${XDG_CONFIG_HOME}/i3blocks/blocklets/ethernet eth0
color=#00FF00
interval=5

[battery]
command=${XDG_CONFIG_HOME}/i3blocks/blocklets/battery BAT0
align=right
min_width= 000% 0:00
interval=5

[volume]
command=${XDG_CONFIG_HOME}/i3blocks/blocklets/volume 1 Master
align=right
min_width=  000%
interval=once
signal=1

[time]
command=date '+%Y-%m-%d %H:%M'
align=right
min_width=0000-00-00 00:00
interval=30
