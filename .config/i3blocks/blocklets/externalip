#!/bin/bash
prefix="\uf2df" 

scriptname="$(basename $0)"

logfile="${HOME}/.local/var/log/${scriptname}.log"
exec 3>&1
exec 1>${logfile}
exec 2>&1

nm-online -x || exit 0

externalip=$(curl -s freegeoip.net/csv/ | perl -lne 'print $1 if /^((?:\d{1,3}\.){3}\d{1,3}),/')
if [ -z "$externalip" ]; then
    externalip=$(curl -s ifconfig.me/ip | perl -ne 'print if /^(?:\d{1,3}\.){3}\d{1,3}$/')
fi
[ -z "$externalip" ] && exit 0

defaultdev=$(ip route | perl -ne 'print "$1\n" if /^default\s.*\sdev\s([^\s]+)/')
defaultdevaddrs=($(ip addr show ${iface} | perl -ne 'print "$1\n" if /inet (.+)\/.*scope global/'))
defaultip=${defaultdevaddrs[0]}
["$externalip" = "$defaultip" ] && exit 0

full_text="$prefix $externalip"

exec >&3

echo -e $full_text

exit 0
