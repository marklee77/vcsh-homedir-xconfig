good_threshold=50
good_prefix=" "
degraded_threshold=20
degraded_prefix=" "
degraded_color="#FFFF00"
bad_prefix=" "
bad_color="#FF0000"

IFACE="$1"
[ -z "${IFACE}" ] && IFACE=wlan0

state="$(cat /sys/class/net/$IFACE/operstate)"

if [ "$state" != "up" ]; then
	exit 0
fi

ipaddrs=($(ip addr show $IFACE | perl -ne 'print "$1\n" if /inet (.+)\//'))
ipaddrs6=($(ip addr show $IFACE | perl -ne 'print "$1\n" if /inet6 (.+)\//'))

short_text="${ipaddrs[0]}"
full_text="${ipaddrs[@]} ${ipaddrs6[0]}"

stats=($(iwconfig wlan0 | perl -0ne 'print "$1\n$2\n", eval "int(100*$3)", "\n" if /ESSID:"(.+?)".*Bit Rate=(.+?)\s+Tx-Power=.*?Link Quality=(.+?)\s*Signal level=.*?/ms;'))
if [ -n "$stats" ]; then
    essid="${stats[0]}"
    quality="${stats[3]}"
    speed="${stats[1]} ${stats[2]}"
    full_text="$full_text ($quality% at $essid, $speed)" 
    if [ "$quality" -lt "$degraded_threshold" ]; then
        prefix=$bad_prefix
        color=$bad_color
    elif [ "$quality" -lt "$good_threshold" ]; then
        prefix=$degraded_prefix
        color=$degraded_color
    else
        prefix=$good_prefix
    fi
fi

echo $prefix$full_text
echo $prefix$short_text
[ -n "$color" ] && echo $color

exit 0
