thresholds=(100 50 25 10)
prefixes=('' '' '' '')
colors=('#00FF00' '#FFFFFF' '#FFFF00' '#FF0000')

iface="${1:-wlan0}"

state="$(cat /sys/class/net/$iface/operstate)"
if [ "$state" != "up" ]; then
	exit 0
fi

ipaddrs=($(ip addr show $iface | perl -ne 'print "$1\n" if /inet (.+)\//'))
ipaddrs6=($(ip addr show $iface | perl -ne 'print "$1\n" if /inet6 (.+)\//'))

short_text="${ipaddrs[0]}"
full_text="${ipaddrs[@]} ${ipaddrs6[0]}"

#stats=($(iwconfig $iface | perl -0ne 'print "$1 $2 ", eval "int(100*$3)" if /ESSID:"(.+?)".*Bit Rate=(.+?)\s+T.*Link Quality=(.+?)\s*S.*/ms;'))
stats=($(iwconfig $iface | perl -0ne 'print "$1 $2 ", eval "int(100*$3)" if /ESSID:"(.+?)".*Bit Rate=(.+?\/s).*Link Quality=([^\s]+)/ms;'))
echo ${stats[@]}
exit 0
if [ -n "$stats" ]; then
    essid="${stats[0]}"
    quality="${stats[3]}"
    speed="${stats[1]} ${stats[2]}"
    full_text="$full_text ($quality% at $essid, $speed)" 
    if [ "$quality" -lt "$degraded_threshold" ]; then
        prefix=$bad_prefix
        color=$bad_color
    elif [ "$quality" -lt "$good_threshold" ]; then
        prefix=$degraded_prefix
        color=$degraded_color
    else
        prefix=$good_prefix
    fi
fi

echo $prefix$full_text
echo $prefix$short_text
[ -n "$color" ] && echo $color

exit 0
