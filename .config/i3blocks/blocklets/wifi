INTERFACE="$1"
[ -z "${INTERFACE}" ] && INTERFACE=wlan0

state="$(cat /sys/class/net/$INTERFACE/operstate)"

if [ "$state" != "up" ]; then
	exit 0
fi

speed="$(cat /sys/class/net/$INTERFACE/speed 2> /dev/null)"

ipaddrs=($(ip addr show eth0 | perl -ne 'print "$1\n" if /inet (.+)\//'))
ipaddrs6=($(ip addr show eth0 | perl -ne 'print "$1\n" if /inet6 (.+)\//'))

short_msg=" ${ipaddrs[0]}"
long_msg=" ${ipaddrs[@]} ${ipaddrs6[0]}"
[ -n "$speed" ] && long_msg="$long_msg ($speed Mbits/s)"

echo $long_msg
echo $short_msg
