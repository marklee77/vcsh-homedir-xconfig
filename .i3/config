
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# fix keyboard
exec --no-startup-id setxkbmap gb -option inet:evdev -option caps:escape -option compose:menu

# autolock
exec --no-startup-id exec xautolock -time 10 -locker laptop-lock -killtime 20 -killer "on_ac_power || laptop-smartsleep" -secure

# solarized background color
exec --no-startup-id xsetroot -solid '#002b36'

# window fx
#exec --no-startup-id compton --config .config/compton/compton.conf

# display notifications
exec --no-startup-id exec dunst

# applets
#exec --no-startup-id exec nm-applet 
#exec --no-startup-id exec system-config-printer-applet
#exec --no-startup-id exec blueman-applet

# unclutter
exec --no-startup-id exec unclutter -idle 5 -root

set $mod Mod4
new_window 1pixel
new_float normal 1
hide_edge_borders both
#for_window [class="^.*"] border pixel 1

focus_follows_mouse no

# font for window titles. ISO 10646 = Unicode
font pango:DejaVu Sans Mono 11

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
#bindsym $mod+Return exec urxvtcd
bindsym $mod+Return exec st

bindsym $mod+Shift+F exec firefox

# kill focused window
bindsym $mod+Shift+Q kill

# start dmenu (a program launcher)
bindsym $mod+d exec dmenu_run -b

# start screensaver lock
bindsym Control+$mod+l exec --no-startup-id exec laptop-lock

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+H move left
bindsym $mod+Shift+J move down
bindsym $mod+Shift+K move up
bindsym $mod+Shift+L move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+s split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, default)
bindsym $mod+t layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout default

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindcode $mod+d focus child

# switch to workspace
workspace_auto_back_and_forth yes
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+exclam move workspace 1
bindsym $mod+Shift+quotedbl move workspace 2
bindsym $mod+Shift+sterling move workspace 3
bindsym $mod+Shift+dollar move workspace 4
bindsym $mod+Shift+percent move workspace 5
bindsym $mod+Shift+asciicircum move workspace 6
bindsym $mod+Shift+ampersand move workspace 7
bindsym $mod+Shift+asterisk move workspace 8
bindsym $mod+Shift+parenleft move workspace 9
bindsym $mod+Shift+parenright move workspace 10

# reload the configuration file
bindsym $mod+Shift+C reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+R restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+E exit

# resize window (you can also use the mouse for that)
mode "resize" {

bindsym $mod+h           resize shrink right 10 px or 10 ppt
bindsym $mod+Left        resize shrink right 10 px or 10 ppt
bindsym $mod+Shift+H     resize grow   left  10 px or 10 ppt
bindsym $mod+Shift+Left  resize grow   left  10 px or 10 ppt

bindsym $mod+j           resize shrink up    10 px or 10 ppt
bindsym $mod+Down        resize shrink up    10 px or 10 ppt
bindsym $mod+Shift+J     resize grow   down  10 px or 10 ppt
bindsym $mod+Shift+Down  resize grow   down  10 px or 10 ppt

bindsym $mod+k           resize shrink down  10 px or 10 ppt
bindsym $mod+Up          resize shrink down  10 px or 10 ppt
bindsym $mod+Shift+K     resize grow   up    10 px or 10 ppt
bindsym $mod+Shift+Up    resize grow   up    10 px or 10 ppt

bindsym $mod+l           resize shrink left  10 px or 10 ppt
bindsym $mod+Right       resize shrink left  10 px or 10 ppt
bindsym $mod+Shift+L     resize grow   right 10 px or 10 ppt
bindsym $mod+Shift+Right resize grow   right 10 px or 10 ppt

bindsym $mod+Return mode "default"
bindsym $mod+Escape mode "default"

}

bindsym $mod+r mode "resize"

## Special Keys

# suspend
bindsym XF86Sleep exec --no-startup-id laptop-smartsleep

# monitor (need to test)
# bindsym XF86Display exec --no-startup-id xrandr..

# audio
bindsym XF86AudioRaiseVolume exec --no-startup-id laptop-volume-set 2%+ && pkill -RTMIN+1 i3blocks 
bindsym XF86AudioLowerVolume exec --no-startup-id laptop-volume-set 2%- && pkill -RTMIN+1 i3blocks
bindsym XF86AudioMute exec --no-startup-id laptop-volume-set toggle && pkill -RTMIN+1 i3blocks

# micmute is note working...
#bindsym XF87AudioMicMute exec --no-startup-id amixer -q -c 1 set Mic toggle && killall -SIGUSR1 i3blocks

# brightness
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 2 -time 0 && pkill -RTMIN+2 i3blocks
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 2 -time 0 && pkill -RTMIN+2 i3blocks

# Assigns
assign [class="Firefox"] 2

# Floating Apps
for_window [class="Gimp"] floating enable
for_window [class="PlayOnLinux"] floating enable
for_window [class="Skype"] floating enable
for_window [title="Cura.*"] floating enable
for_window [class="fontforge"] floating enable

# Firefox
for_window [title="Library"] floating enable
for_window [title="Firefox Preferences"] floating enable


bar {
  position top
  status_command exec i3blocks
}

client.focused #859900 #859900 #fdf6e3 #859900
client.focused_inactive #073642 #073642 #eee8d5 #6c71c4
client.unfocused #073642 #073642 #93a1a1 #586e75
client.urgent #d33682 #d33682 #fdf6e3 #dc322f
